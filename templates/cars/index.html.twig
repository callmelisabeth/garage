{% extends 'base.html.twig' %}

{% block title %}Cars index{% endblock %}

{% block body %}
    <h1>Cars index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marques</th>
                <th>Prix</th>
                <th>Kilometres</th>
                <th>Date de circulation</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.brand }}</td>
                <td>{{ car.price }}</td>
                <td>{{ car.kilometers }}</td>
                <td>{{ car.yearInCirculation ? car.yearInCirculation|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_cars_show', {'id': car.id}) }}">show</a>
                    <a href="{{ path('app_cars_edit', {'id': car.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cars_new') }}">Create new</a>
{% endblock %}
