			<section>
				<form id="filter-form" class="mt-3 container">
					<div class="d-flex flex-sm-column flex-lg-row col-lg-8">
						<div class="m-2">
							<label for="filter_price">Prix :</label>
							<input type="range" class="form-range" filter_"0" max="150000" step="1000" name="filter_price" id="filter_price" onchange="updateRangeValue(this, 'filter_price_value')">
