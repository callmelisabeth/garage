{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	{% block header %}
		{% include "navbarAdmin/headerAdmin.html.twig" %}
	{% endblock %}
	<main class="container blockbody">
		<section class="row">
			<div class="col-12">
				<div class="titlePage">
					<h1 class="text-uppercase">Liste des utilisateur</h1>

					<table class="table">
						<thead>
							<tr>
								<th>Id</th>
								<th>Email</th>
								{# <th>Roles</th>
																																                <th>Password</th> #}
								<th>Modifier</th>
							</tr>
						</thead>
						<tbody>
							{% for user in users %}
								<tr>
									<td>{{ user.id }}</td>
									<td>{{ user.email }}</td>
									{# <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
																																				                <td>{{ user.password }}</td> #}
									<td>
										<a href="{{ path('app_cars_show', {'id': car.id}) }}">
											<i class="bi bi-eye"></i>
										</a>
										<a href="{{ path('app_cars_edit', {'id': car.id}) }}">
											<i class="bi bi-pencil"></i>
										</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">Aucun utilisateur trouvé</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

					<a href="{{ path('app_user_new') }}">Crée un utilisateur</a>

				</div>
			</div>
		</section>
	</main>
{% endblock %}
