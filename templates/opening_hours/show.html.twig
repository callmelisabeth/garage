{% extends 'base.html.twig' %}

{% block title %}Jour d'ouverture
{% endblock %}

{% block body %}
	{% block header %}
		{% include "navbarAdmin/headerAdmin.html.twig" %}
	{% endblock %}
	<main class="container blockbody">
		<section class="row">
			<div class="col-12">
				<div class="titlePage">
					<h1 class="text-uppercase">Jour d'ouverture</h1>

					<table class="table">
						<tbody>
							<tr>
								<th>Id</th>
								<td>{{ opening_hour.id }}</td>
							</tr>
							<tr>
								<th>Jour</th>
								<td>{{ opening_hour.day }}</td>
							</tr>
							<tr>
								<th>Horaire d'ouverture</th>
								<td>{{ opening_hour.startTime ? opening_hour.startTime|date('H:i:s') : '' }}</td>
							</tr>
							<tr>
								<th>Horaire de fermeture</th>
								<td>{{ opening_hour.closingTime ? opening_hour.closingTime|date('H:i:s') : '' }}</td>
							</tr>
						</tbody>
					</table>

					<a href="{{ path('app_opening_hours_index') }}">Retour Ã  la liste</a>

					<a href="{{ path('app_opening_hours_edit', {'id': opening_hour.id}) }}">Modifier</a>

					{{ include('opening_hours/_delete_form.html.twig') }}

				</div>
			</div>
		</section>
	</main>
{% endblock %}
